module BarrelShifter(data_out, data_in, shift_amt, dir);
input  logic [31:0] data_in,
input  logic [4:0]  shift_amt,  // Supports 0-31 shifts
input  logic        dir,        // 0 = left, 1 = right
output logic [31:0] data_out

always @(*) begin
if (dir == 0) begin
data_out = data_in << shift_amt;
end 
else begin
data_out = data_in >> shift_amt;
end
end
endmodule
